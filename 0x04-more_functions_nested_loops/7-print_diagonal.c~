#include "main.h"
/**
 *print_line- print line
 *@n: is an integer.
 *Return: return void.
 */
void diagonal_line(int n)
{
   
  if (n <= 0)
    {
      _putchar('\n');

    }
    
  if (n > 0)
    {
      _putchar('\\');
      int i = 1;
      while (i < n)
        {
	  _putchar('\n');
	  int x = 0;
	  while (x < i)
	    {
	      _putchar(' ');
	      x++;
            }
	  _putchar('\\');
	  i++;
        }
      _putchar('\n');

    }
}
